<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#FFFFFF"
    android:paddingTop="0dip" android:orientation="horizontal" android:weightSum="10"
    android:layout_gravity="top" >
    

   <LinearLayout
       android:layout_weight="4"
       android:layout_width="0dp"
       android:layout_height="170dp"
       >

       <ImageView

           android:id="@+id/ProductImage"
           android:src="@drawable/test"
           android:layout_width="match_parent"
           android:layout_margin="2dp"
           android:layout_height="match_parent" />
   </LinearLayout>

       <TableLayout
           android:layout_width="0dp"
           android:layout_weight="6"
           android:layout_height="match_parent"
           android:layout_gravity="top"
            >
           
           <TableRow android:layout_width="match_parent">

               <TextView 
                   android:id="@+id/Price"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:maxLines="1"
                   android:layout_gravity="left|center_vertical"
                   android:textSize="16dp"
                   android:layout_marginLeft="10dp"
                   android:paddingBottom="2dp"
                   android:paddingTop="2dp"
                   android:layout_marginTop="10dp"
                   android:text=""

                   android:textColor="#3fa1e7" />
           </TableRow>
           <TableRow android:layout_width="match_parent">

               <TextView

                   android:id="@+id/ProductName"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:layout_weight="1"

                   android:textSize="18dp"
                   android:minLines="3" android:maxLines="3"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="4dp"
                   android:text="sdfsdfsdfsdf8"
                   android:textColor="#000000"
                   android:gravity="left" />
           </TableRow>

           <TableRow  android:weightSum="6" android:layout_width="match_parent">
               <ImageView
                   android:id="@+id/RatingStar1"
                   android:src="@drawable/star_gold"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="25dp" />
               <ImageView

                   android:id="@+id/RatingStar2"
                   android:src="@drawable/star_gold"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="25dp" />
               <ImageView

                   android:id="@+id/RatingStar3"
                   android:src="@drawable/star_gold"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="25dp" />
               <ImageView

                   android:id="@+id/RatingStar4"
                   android:src="@drawable/star_gold"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="25dp"/>
               <ImageView

                   android:id="@+id/RatingStar5"
                   android:src="@drawable/star_white"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="25dp" />
               <TextView
                   android:id="@+id/ReviewCount"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="left|center_vertical"
                   android:textSize="12sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="4dp"
                   android:text="(29)"
                   android:textColor="#000000"
                   android:gravity="left" />
           </TableRow>
           <TableRow android:layout_width="match_parent">
               <TextView
                   android:id="@+id/InStock"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"
                   android:textSize="15dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="4dp"
                   android:textColor="#e9d11e"
                   android:gravity="left" />
           </TableRow>
       </TableLayout>
</LinearLayout >
